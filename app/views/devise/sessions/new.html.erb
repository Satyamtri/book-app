

<div class="container">
<div class="signin">
  <div class="row">
    <div class="col-md-6">
      <div class="signin-img">
      </div>
    </div>
    <div class="col-md-6">
        <div class="signin-form">
        
          <h2>Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mt-3">
              <%= f.label :email %><br />
              <%= f.email_field :email, class:"form-control shadow rounded", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field mt-3">
              <%= f.label :password %><br />
              <%= f.password_field :password, class:"form-control shadow rounded", autocomplete: "current-password" %>
            </div>
            </br>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions mt-3 text-center">
              <%= f.submit "Log in", class: "btn btn-success w-100" %>
            </div>
            <hr>

            <div class="field mt-3 text-center">
              <h5 >or</h5>
              <%= link_to "Login with Contact no.", otp_form_path, class:"btn btn-outline-primary" %>
            </div>

          <% end %>
            <hr>
          <%= render "devise/shared/links" %>

        </div>
    </div>
  </div>
  </div>
</div>
