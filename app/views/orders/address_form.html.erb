<div class="container">
    <div class="col-5">
        <div class="address-form">
            <div class="form shadow rounded">
                <div class="otp-form">
                <%= form_with scope: :address, url: addaddress_path, method: :post do |form| %>
                <div class="form-group">
                    <%= form.label :FirstName %></br>
                    <%= form.text_field :first_name,  class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :LastName %></br>
                    <%= form.text_field :last_name, class:"form-control shadow rounded"%>
                </div>
                <div class="form-group">
                    <%= form.label :Contact %></br>
                    <%= form.text_field :contactnumber, class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :Pincode %></br>
                    <%= form.text_field :pincode, class:"form-control shadow rounded"%>
                </div>
                <div class="form-group">
                    <%= form.label :City %></br>
                    <%= form.text_field :city, class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :State %></br>
                    <%= form.text_field :state, class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :Country %></br>
                    <%= form.text_field :country, class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.label :landmark %></br>
                    <%= form.text_field :landmark, class:"form-control shadow rounded" %>
                </div>
                <div class="form-group">
                    <%= form.hidden_field :user_id, value: current_user.id  %>
                </div>
                <div class="form-group">
                    <%= form.submit class:"btn btn-success" %>
                </div>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</div>