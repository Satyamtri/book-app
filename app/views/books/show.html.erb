
<div class="container">
<div class="box">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="cards text-center shadow mb-5 bg-body rounded">
        <div class="cards-header fst-italic">
          by <%= @book.user.name %>
        </div>
        <div class="cards-body">
          <div class="row">
            <div class="col-3">
              <span><%= image_tag @book.avatar_thumbnail %></span>
            </div>
            
            <div class="col-9">   
              <p class="card1-text1 text-left"><%= simple_format(@book.bname) %></p>
              <p class="card1-text1 text-left"><%= simple_format(@book.description) %></p>
              <%= link_to 'Edit', edit_book_path %> |
              <%= link_to 'Back', books_path %>
          </div>
        </div>
        <div class="card1-footer text-muted">
      
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
