<div class="container">
<div class="book">
    <div class="row g-4">
        <% @category.title%>
            <% @category.books.each do |book|%>
                <div class="col-md-3">
                    <div class="card">
                        <div class="image">
                            <%= image_tag book.avatar_thumbnail %>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title"><%=link_to book.bname%></h3>
                            <p class="card-des"><%= truncate(book.description,length: 100)%></p>
                            <%= link_to "View", book_path(book), class: "btn btn-success w-50"%>
                        </div>
                    </div>
                </div>
            <%end%>
    </div>
</div>
</div>