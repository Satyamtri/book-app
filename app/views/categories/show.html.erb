<div class="main-box">
<%= render :partial => "layouts/sidebar" %>
<div class="container">
   <div class="book">
      <div class="row g-4">
            <% @category.title%>
            <% @category.books.each do |book|%>
                <div class="col-3">
                    <div class="card">
                        <div class="image">
                            <%= image_tag book.avatar_thumbnail %>
                        </div>
                        <div class="card-body book-body">
                            <h3 class="card-title"><%=link_to book.bname%></h3>
                            <p class="card-des"><%= truncate(book.description,length: 100)%></p>
                            <p class="card-des">Price: <%= book.price%> Rs </p>
                             <div class="card-button">
                                <%= button_to "Add to cart", addtocart_path(book), class: "btn btn-success m-1" %>
                                <%= button_to "Rent", addtorent_path(book), class: "btn btn-success m-1" %>
                            </div>
                        </div>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>
</div>