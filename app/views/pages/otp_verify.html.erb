<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="signin-form">
        <div class="form shadow rounded">
         <div class="otp-form">
          <%= form_with(url: otp_verification_path, method: :post) do |form| %>
          <div >
            <%= form.label :OTP %></br>
            <%= form.text_field :OTP, class:"form-control shadow rounded" %>
          </div>
          </br>
            <%= form.submit "Submit otp", class:"btn btn-success" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>          